{
  "name": "pec-retriever-server",
  "version": "1.0.0",
  "description": "returns pec address associated to given tax code",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "nodemon dist/index.js",
    "start": "node dist/index.js",
    "build-env": "npx gen-env-types .env -o src/types/env.d.ts -e .",
    "lint": "yarn prettier --config .prettierrc 'src/**/*.ts' --write --check",
    "serve": "docker run --rm -p 8080:8080 --cap-add=SYS_ADMIN --name puppeteer-chrome server yarn start",
    "test": "jest"
  },
  "author": "Alessandro Piola",
  "license": "ISC",
  "devDependencies": {
    "@types/connect-timeout": "^0.0.34",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.13",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.4",
    "@types/promise-poller": "^1.7.0",
    "@types/puppeteer": "^3.0.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "apollo-server-express": "^2.17.0",
    "axios": "^0.20.0",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-compose": "^7.21.0",
    "graphql-compose-mongoose": "^8.0.3",
    "mongoose": "^5.10.4",
    "promise-poller": "^1.9.1",
    "puppeteer": "^5.3.0",
    "reflect-metadata": "^0.1.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  }
}
